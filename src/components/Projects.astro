---
import LinkButton from "../components/LinkButton.astro";
import Link from "../icons/Link.astro";
import GitHubIcon from "../icons/GitHub.astro";
import Html from "../icons/Html.astro";
import Css from "../icons/Css.astro";
import JavaScript from "../icons/JavaScript.astro";
import ReactJs from "../icons/ReactJs.astro";
import Mongo from "../icons/Mongo.astro";

const TAGS = {
  React: {
    name: "React.js",
    class: "bg-[#003159] text-white",
    icon: ReactJs,
  },
  Html: {
    name: "HTML",
    class: "bg-[#003159] text-white",
    icon: Html,
  },
  Css: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: Css,
  },
  JavaScript: {
    name: "Java Script",
    class: "bg-[#003159] text-white",
    icon: JavaScript,
  },
  Mongo: {
    name: "Mongo",
    class: "bg-[#003159] text-white",
    icon: Mongo,
  },
};

const PROJECTS = [
{
    title: "Enfermería APP",
    description:
      "Calculadora de gotas en un suero, tambien cuenta con buscador de ademecuns y otras funciones, pensada para un enfermero. Creada desde cero como trabajo final de la materia Programación III en la Universidad Tecnológica Nacional.",
    link: "https://enfermeria.vercel.app",
    github: "https://github.com/octaviopaz7/enfAPP",
    image: "/projects/EnfermeriaAPP.webp",
    tags: [TAGS.React, TAGS.Css , TAGS.Mongo],
  },
  {
    title: "AluraGeek",
    description:
      "Biblioteca de muñecos de Star Wars, 100% responsiva.  Creado para el challenge de la fomación Front End G6 - ONE de Alura Latam.",
    link: "https://alura-geek-st.vercel.app/",
    github: "https://github.com/octaviopaz7/AluraGeek",
    image: "/projects/AluraGeek-ST.webp",
    tags: [TAGS.Html, TAGS.Css, TAGS.JavaScript],
  },
  {
    title: "AluraFlix",
    description:
      "Plataforma de videos de programación, 100% responsiva. Creado para el challenge de la fomación React G6 - ONE de Alura Latam.",
    link: "https://alura-flixx.vercel.app/",
    github: "https://github.com/octaviopaz7/AluraFlix-React",
    image: "/projects/AluraFlix.webp",
    tags: [TAGS.React, TAGS.Css],
  },
  {
    title: "Portfolio Alura",
    description:
      "Portfolio 100% responsivo. Creado para el challenge de la fomación Front End G6 - ONE de Alura Latam.",
    link: "https://portfolio-ivory-omega-46.vercel.app/",
    github: "https://github.com/octaviopaz7/Portfolio",
    image: "/projects/Portfolio.webp",
    tags: [TAGS.Html, TAGS.Css, TAGS.JavaScript],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github} >
                  <GitHubIcon class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link} >
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
